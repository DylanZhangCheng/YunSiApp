<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="5dp"
        android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_photo"
                android:adjustViewBounds="true"
                android:maxHeight="160dp"
                android:maxWidth="100dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/xihu2"
                android:background="@drawable/shadow_bg"/>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:gravity="left"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/layout_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true">

                <TextView
                    android:id="@+id/tv_push_date"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2017-06-02"
                    android:textColor="@color/gray"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/iv_collect"
                    android:layout_width="18dp"
                    android:layout_height="18dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/collect2_no"
                    android:layout_toRightOf="@+id/tv_push_date"/>
            </RelativeLayout>

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="这是大标题"
                android:textColor="#000000"
                android:textSize="18sp"
                android:layout_below="@+id/layout_1"
                android:singleLine="true"
                android:ellipsize="end"/>

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_title">

                <TextView
                    android:id="@+id/tv_brief"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="这是简介"
                    android:textColor="#808069"
                    android:textSize="12sp"
                    android:singleLine="false"
                    android:maxLines="2"
                    android:ellipsize="end" />

                <!--<TextView-->
                    <!--android:layout_width="wrap_content"-->
                    <!--android:layout_height="wrap_content"-->
                    <!--android:layout_toEndOf="@+id/tv_brief"-->
                    <!--android:text="查看详情>>"-->
                    <!--android:textColor="@color/blue"-->
                    <!--android:textSize="14sp" />-->
            </RelativeLayout>
        </RelativeLayout>

    </LinearLayout>

</LinearLayout>
